<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:custom="http://schemas.android.com/apk/res-auto"
  tools:context=".ui.department.DepartmentOverviewFragment">

  <LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@color/app_primary_color"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <EditText
      android:id="@+id/edTxtSearchDept"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:background="@drawable/bg_solid_white_edittext"
      android:drawablePadding="10dp"
      android:drawableStart="@drawable/ic_search_24dp"
      android:hint="Search department" />



  </LinearLayout>

  <com.todkars.shimmer.ShimmerRecyclerView
    android:id="@+id/recyclerDepartment"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    custom:shimmer_recycler_layout="@layout/list_item_shimmer"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    custom:shimmer_recycler_item_count="10"/>

</androidx.constraintlayout.widget.ConstraintLayout>