<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".ui.employee.DetailedEmployeeFragment">

<androidx.constraintlayout.widget.ConstraintLayout

  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >

  <LinearLayout
    android:id="@+id/textRow1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="10"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHeight_percent=".14"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="3"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee ID"
        android:textColor="@color/editTextSubHeading"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"/>
      <EditText
        android:id="@+id/edTxtEmpId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:background="@color/editTextBackground"
        android:hint="1003"
        android:maxLines="1"
        android:textColor="@color/editTextSubHeading"
        android:textColorHint="@color/greyDate"
        android:enabled="false"/>


    </LinearLayout>
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="7"
      android:layout_marginLeft="5dp"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee Name"
        android:textColor="@color/editTextSubHeading"
        android:fontFamily="@font/poppins_medium"

        android:textSize="14sp"/>
      <EditText
        android:id="@+id/edTxtEmpName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:background="@color/editTextBackground"
        android:hint="Saptarshi Das"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textColorHint="@color/greyDate"
        android:enabled="false"/>


    </LinearLayout>

  </LinearLayout>

  <LinearLayout
    android:id="@+id/textRow2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="10"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHeight_percent=".14"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textRow1">
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="5"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Date Of Birth"
        android:textColor="@color/editTextSubHeading"
        android:textSize="14sp" />

      <EditText
        android:id="@+id/edTxtEmpDob"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:background="@color/editTextBackground"
        android:hint="15-05-1997"
        android:maxLines="1"
        android:textColorHint="@color/greyDate"
        android:enabled="false"/>




    </LinearLayout>
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="5"
      android:layout_marginLeft="5dp"
      android:orientation="vertical">


      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Joining Date"
        android:textColor="@color/editTextSubHeading"

        android:textSize="14sp" />

      <EditText
        android:id="@+id/edTxtEmpJoining"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:background="@color/editTextBackground"
        android:hint="24-06-2021"
        android:maxLines="1"
        android:textColorHint="@color/greyDate"
        android:enabled="false"/>



    </LinearLayout>

  </LinearLayout>

  <LinearLayout
    android:id="@+id/textRow3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="8dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="10"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHeight_percent=".14"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textRow2">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="10"
      android:layout_marginLeft="5dp"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Department"
        android:textColor="@color/editTextSubHeading"

        android:textSize="14sp" />

      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/departmentSpinnerLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
          android:id="@+id/departmentTextView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:clickable="true"
          tools:ignore="KeyboardInaccessibleWidget" />
      </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

  </LinearLayout>

  <LinearLayout
    android:id="@+id/textRow4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="8dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="10"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHeight_percent=".14"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textRow3">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="10"
      android:layout_marginLeft="5dp"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Designation"
        android:textColor="@color/editTextSubHeading"

        android:textSize="14sp" />
      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/designationSpinnerLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
          android:id="@+id/designationTextView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:clickable="true"
          tools:ignore="KeyboardInaccessibleWidget" />
      </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

  </LinearLayout>

  <LinearLayout
    android:id="@+id/textRow5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="8dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="10"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHeight_percent=".14"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textRow4">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="10"
      android:layout_marginLeft="5dp"
      android:orientation="vertical">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Work Type"
        android:textColor="@color/editTextSubHeading"

        android:textSize="14sp" />


      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/workTypeSpinnerLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
          android:id="@+id/workTypeTextView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:clickable="true"
          tools:ignore="KeyboardInaccessibleWidget" />
      </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

  </LinearLayout>

  <LinearLayout
    android:id="@+id/textRow6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="8dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="10"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHeight_percent=".14"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textRow5">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="10"
      android:layout_marginLeft="5dp"
      android:orientation="vertical">


      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Email"
        android:textColor="@color/editTextSubHeading"

        android:textSize="14sp" />
      <EditText
        android:id="@+id/edTxtEmpEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:background="@color/editTextBackground"
        android:hint="saptarshi@gmail.com"
        android:maxLines="1"
        android:textColorHint="@color/greyDate" />


    </LinearLayout>

  </LinearLayout>

  <LinearLayout
    android:id="@+id/textRow7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="8dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="10"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHeight_percent=".14"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textRow6">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="10"
      android:layout_marginLeft="5dp"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Mobile"
        android:textColor="@color/editTextSubHeading"

        android:textSize="14sp" />


      <EditText
        android:id="@+id/edTxtEmpPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:background="@color/editTextBackground"
        android:hint="7797082347"
        android:maxLines="1"
        android:textColorHint="@color/greyDate" />



    </LinearLayout>

  </LinearLayout>


  <LinearLayout
    android:id="@+id/textRow8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="8dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="10"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHeight_percent=".14"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textRow7">


  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="5"
    android:layout_marginLeft="5dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btnSetupLeave"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      app:layout_constraintTop_toBottomOf="@id/passwordBox"
      android:layout_marginTop="30dp"
      android:text="LEAVE SETUP"
      android:textColor="@color/white"
      android:backgroundTint="@color/app_primary_color"
      />


  </LinearLayout>

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="5"
      android:layout_marginLeft="5dp"
      android:orientation="vertical">

      <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpdateEmp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/passwordBox"
        android:layout_marginTop="30dp"
        android:text="UPDATE EMPLOYEE"
        android:textColor="@color/white"
        android:backgroundTint="@color/app_primary_color"
        />


    </LinearLayout>




  </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>