<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".ui.training.AssignTrainingFragment">


  <LinearLayout
    android:id="@+id/textRow1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="10"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHeight_percent=".14"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="10"
      android:layout_marginLeft="5dp"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Employee"
        android:textColor="@color/editTextSubHeading"

        android:textSize="14sp" />

      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/employeeSpinnerLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
          android:id="@+id/employeeTextView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:clickable="true"
          tools:ignore="KeyboardInaccessibleWidget" />
      </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

  </LinearLayout>

  <LinearLayout
    android:id="@+id/textRow2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="10"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHeight_percent=".14"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textRow1">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="10"
      android:layout_marginLeft="5dp"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Training"
        android:textColor="@color/editTextSubHeading"

        android:textSize="14sp" />

      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/trainingSpinnerLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
          android:id="@+id/trainingTextView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:clickable="true"
          tools:ignore="KeyboardInaccessibleWidget" />
      </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

  </LinearLayout>

  <LinearLayout
    android:id="@+id/textRow3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="10"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHeight_percent=".14"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textRow2">
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="5"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="From Date"
        android:textColor="@color/editTextSubHeading"
        android:textSize="14sp" />

      <EditText
        android:id="@+id/edTxtFromDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:background="@color/editTextBackground"
        android:hint="15-05-1997"
        android:maxLines="1"
        android:textColorHint="@color/greyDate"
        />




    </LinearLayout>
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="5"
      android:layout_marginLeft="5dp"
      android:orientation="vertical">


      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="To Date"
        android:textColor="@color/editTextSubHeading"

        android:textSize="14sp" />

      <EditText
        android:id="@+id/edTxtToDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:background="@color/editTextBackground"
        android:hint="24-06-2021"
        android:maxLines="1"
        android:textColorHint="@color/greyDate"
        />



    </LinearLayout>

  </LinearLayout>

  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btnAssignTraining"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:backgroundTint="@color/app_primary_color"
    android:text="ASSIGN"
    android:textColor="@color/white"
    app:layout_constraintEnd_toEndOf="@+id/textRow3"
    app:layout_constraintTop_toBottomOf="@+id/textRow3" />


</androidx.constraintlayout.widget.ConstraintLayout>